package com.adp.control.actions;

import org.springframework.beans.factory.annotation.Autowired;

import com.adp.business.services.UtilisateurService;
import com.adp.exceptions.ADPException;



/**
 * @author M.BENAMOR
 *
 */
public class AccountValidationAction extends AbstractAction {

	private static final long serialVersionUID = -3498273877470668895L;

	@Autowired
	private UtilisateurService utilisateurService;
	
	private int userId;
	
	private String message;
	
	public String execute() {  
	    
		try {
			if(check()){
				utilisateurService.validate(userId);
				message = "Compte validé, veuillez vous connecter.";
			}
		} catch (ADPException e) {
			message = "Compte non validé, veuillez contacter votre administrateur.";
		}
		
		return SUCCESS;  
  
	}

	private boolean check() {
		if(userId == 0){
			return false;
		}
		return true;
	}

	public int getUserId() {
		return userId;
	}

	public void setUserId(int userId) {
		this.userId = userId;
	}

	public String getMessage() {
		return message;
	}

	public void setMessage(String message) {
		this.message = message;
	} 
	
}
